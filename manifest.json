{
  "manifest_version": 2,
  "name": "RSS Feeder",
  "version": "0.0.0",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "icons": {
    "48": "public/RSSF-48.png",
    "96": "public/RSSF-96.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "public/RSSF-19.png",
      "38": "public/RSSF-38.png"
    },
    "default_title": "RSS Feeder"
  },
  "permissions": [
      "tabs"
  ],
  "background": {
      "scripts": ["src/background.js"]
  }
}
